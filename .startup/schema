#!/bin/bash

set -x

RF=3
IP=$(ifconfig | awk '/inet/ { print $2 }' | egrep -v '^fe|^127|^192|^172|::' | head -1)
IP=${IP#addr:}

if [[ $HOSTNAME == "node"* ]] ; then
    #rightscale
    IP=$(grep $(hostname) /etc/hosts | grep -v ext | awk '{print $1}')
fi

if [[ "$OSTYPE" == "darwin"* ]]; then
    # Mac OSX
    IP=localhost
    RF=1
fi

cqlsh "$IP" -e "
CREATE KEYSPACE if not exists wordcount WITH replication = {'class': 'SimpleStrategy', 'replication_factor': '"$RF"'}  AND durable_writes = true;

CREATE TABLE if not exists wordcount.wordcount (
    word text,
    time bigint,
    count int,
    PRIMARY KEY ((word, time))
);

CREATE TABLE if not exists wordcount.rollups (
    word text PRIMARY KEY,
    count int
);

TRUNCATE TABLE wordcount.wordcount;
TRUNCATE TABLE wordcount.rollups;"
